doctype html
html
  head
    title Clementine.js - The elegant and lightweight full stack JavaScript boilerplate.
    link(href='https://fonts.googleapis.com/css?family=Roboto:400,500', rel='stylesheet', type='text/css')
    link(href='/public/css/main.css', rel='stylesheet', type='text/css')
  body
    .container
      .github-profile
        img(src='/public/img/gh-mark-32px.png', alt='github logo')
        p
          span ID: 
          span#profile-id.profile-value
        p
          span Username: 
          span#profile-username.profile-value
        p
          span Display Name: 
          span#display-name.profile-value
        p
          span Repositories: 
          span#profile-repos.profile-value
        a.menu(href='/') Home
        p#menu-divide |
        a.menu(href='/logout') Logout
    script(type='text/javascript', src='/common/clientConfig.js')
    script(type='text/javascript', src='/common/ajax-functions.js')
    script(type='text/javascript', src='/controllers/userController.client.js')
